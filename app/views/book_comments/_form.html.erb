<table>
  <tbody>
      <% @book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to book_path(book_comment.user) , method: :post , remote: true , data: {"turbolinks" => false} do %>
            <%= image_tag book_comment.user.get_profile_image, size: "100x100" %><br>
            <%= book_comment.user.name %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-danger pull-right" , remote: true , data: {"turbolinks" => false} %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= form_with model:[book, book_comment], url: book_book_comments_path(book), local: false , data: {"turbolinks" => false} do |f| %>
    <%= f.text_area :comment, rows: '5' , class: "w-100" %>
    <%= f.submit "送信する" %>
<% end %>
